@model UpdateNotificationDto
@{
    ViewData["Title"] = "UpdateNotification";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Kategori İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<input type="hidden" asp-for="NotificationID"/>
						<div class="card-header">
							<div class="card-title">Bildirim Güncelleme</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="notitype">Bildirim Türü</label>
								<input type="text" class="form-control" asp-for="Type" id="notitype">
							</div>
							<div class="form-group">
								<label for="notiicon">Bildirim İkonu</label>
								<input type="text" class="form-control" asp-for="Icon" id="notiicon">
							</div>
							<div class="form-group">
								<label for="notidescription">Açıklama</label>
								<input type="text" class="form-control" asp-for="Description" id="notidescription">
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-success">Bildirim Güncelle</button>
						</div>
					</div>
				</form>
			</div>

		</div>
	</div>
</div>